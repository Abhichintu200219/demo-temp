{
  "name": "my-shop",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "type-check": "tsc --noEmit",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
     "// BDD + Playwright Scripts": "Scripts for running BDD and E2E tests",
    "test:e2e": "NODE_NO_WARNINGS=1 NODE_OPTIONS='--loader ts-node/esm --experimental-specifier-resolution=node' cucumber-js \"e2e/tests/features/**/*.feature\" --import \"e2e/tests/step-definitions/**/*.ts\" --import \"e2e/tests/support/**/*.ts\"",
    "test:e2e:headed": "HEADLESS=false npm run test:e2e",
    "test:e2e:debug": "npm run test:e2e -- --debug",
    "test:e2e:chrome": "BROWSER=chromium npm run test:e2e",
    "test:e2e:firefox": "BROWSER=firefox npm run test:e2e",
    "test:e2e:safari": "BROWSER=webkit npm run test:e2e",
    "test:e2e:tags": "npm run test:e2e -- --tags",
    "test:e2e:parallel": "npm run test:e2e -- --parallel 2",
    "test:playwright": "playwright test",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "test:report": "npm run test:e2e -- --format html:reports/cucumber-report.html",
    "test:report:json": "npm run test:e2e -- --format json:reports/cucumber-report.json",
    "pretest": "npm run build",
    "test:install": "playwright install --with-deps",
    "build:preview": "npm run build && npm run preview"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "fs-extra": "^11.3.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cucumber": "^6.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.4"
  }
}
